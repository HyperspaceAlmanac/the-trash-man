@model TrashCollector.Models.OneTimePickup

@{
    ViewData["Title"] = "RegisterOneTimePickup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Please select a day for a one time pickup</h1>

<h4>Weekly scheduled pickup will take priority and charges will be based on those rates</h4>
<h4>Each scheduled pickup will be removed from list after they have been fulfilled</h4>

@if (Model.PreviousError)
{
    <h4 class="text-danger">Error: Another non-weekly pickup is already scheduled on the same day. Please try again</h4>
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterOneTimePickup">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" required min=@Model.TodaysDate/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</div>

